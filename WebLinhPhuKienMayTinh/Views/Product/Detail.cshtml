@model WebLinhPhuKienMayTinh.Models.EF.PRODUCT
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = (WebLinhPhuKienMayTinh.Models.EF.CATEGORY)ViewBag.Category;
}
    <div class="content">
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="grid images_3_of_2">
                    <img src="@Model.images" alt="" />
                </div>
                <div class="desc span_3_of_2">
                    <h2>@Model.productName </h2>
                    <p>@Model.product_Desc</p>
                    <div class="price">
                        <p>Giá: <span>@Model.price VNĐ</span></p>
                        <p>Loại sản phẩm: <span>@category.catName</span></p>
                        <p>Thương hiệu:<span>@Model.BRAND.brandName</span></p>
                    </div>
                    <div class="add-cart">
                        <form action="/them-gio-hang?productId=@Model.productId&quantity=1" method="post">
                            <input type="number" class="buyfield" name="" value="1" />
                            <input type="submit" class="buysubmit" name="submit" value="Mua ngay" />
                        </form>
                    </div>
                </div>
                <div class="product-desc">
                    <h2>Chi tiết sản phẩm</h2>
                    <p>@Model.product_Desc</p>
                    
                </div>

            </div>

        </div>
    </div>


