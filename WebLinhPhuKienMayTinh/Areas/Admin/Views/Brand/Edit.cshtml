@model WebLinhPhuKienMayTinh.Models.EF.BRAND

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header
{
    SỬA THƯƠNG HIỆU SẢN PHẨM
}

@using (Html.BeginForm("Edit", "Brand", FormMethod.Post))
{
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Sửa</h3>
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="success">@ViewData["success"]</div>
        </div>
        <!-- /.box-header -->
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.brandId)
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name">Thương hiệu sản phẩm</label>
                        @Html.EditorFor(model => model.brandName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Loại thương hiệu</label>
                        <select class="form-control" name="topBrand">
                            @{
                                if (ViewBag.topBrand == "0")
                                {
                                    <option selected value="0">Thương hiệu bình thường</option>
                                    <option value="1">Thương hiệu hàng đầu</option>
                                }
                                else
                                {
                                    <option selected value="1">Thương hiệu hàng đầu</option>
                                    <option value="0">Thương hiệu bình thường</option>
                                }
                            }
                        </select>
                    </div>
                    <!-- /.form-group -->

                </div>

                <!-- /.col -->
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary" value="Sửa" />
            </div>
            <div>
                @Html.ActionLink("<<<Quay lại", "Brandlist", "Brand")
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>

}
